<div class="container my-4">
  <div class="card p-4">
    <%= form_with(model: [@recipe, @recipe_food], url: recipe_recipe_foods_path(@recipe), method: :post) do |form| %>
      <div class="form-row">
        <div class="form-group col-md-6 mb-3"> <!-- Added mb-3 class for margin-bottom -->
          <%= form.label :food_id, "Food" %>
          <%= form.collection_select :food_id, Food.all, :id, :name, { prompt: "Select a food" }, class: "form-control" %>
        </div>

        <div class="form-group col-md-6">
          <%= form.label :quantity %>
          <%= form.number_field :quantity, class: "form-control" %>
        </div>
      </div>

      <div class="form-group mt-3">
        <%= form.submit "Create Ingredient", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

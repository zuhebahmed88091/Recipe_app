<%= form_with(model: [@recipe, @recipe_food], url: recipe_recipe_foods_path(@recipe), method: :post) do |form| %>
  <div class="field">
    <%= form.label :food_id, "Food" %>
    <%= form.collection_select :food_id, Food.all, :id, :name, prompt: "Select a food" %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="actions">
    <%= form.submit "Create Ingredient", class: "btn btn-primary" %>
  </div>
<% end %>
<%= link_to "Add food", new_food_path, class: 'btn btn-outline-success' %>
<table class="table table-striped">
    <% if @foods.present? %>
        <thead>
            <tr>
                <th scope="col">Foods</th>
                <th scope="col">Measurement Unit</th>
                <th scope="col">Quantity</th>
                <th scope="col">Unit Price</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% @foods.each do |food| %>
                <tr>
                    <td><%= food.name %></td>
                    <td><%= food.measurement_unit %></td>
                    <td><%= food.quantity %></td>
                    <td><%= food.price %></td>
                    <td>
                        <%= button_to "Delete", food, method: :delete, class: 'btn btn-outline-danger' %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    <% else %> 
        <p>No foods found</p>
    <% end %>
</table>
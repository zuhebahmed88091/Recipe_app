<div class="recipe-details">
  <h2><%= @recipe.name %></h2>

  <div class="recipe-details-box1">
    <p>Preparation Time: <%= @recipe.preparation_time %> minutes</p>

    <%= form_for @recipe, url: recipe_path(@recipe), method: :patch do |f| %>
      <label for="recipe_public">Public:</label>
      <%= f.check_box :public, id: 'recipe_public' %>
      <%= f.submit 'Toggle', class: 'btn btn-primary' %>
    <% end %>

  </div>

  <p>Cooking Time: <%= @recipe.cooking_time %> minutes</p>
  <p>Description: <%= @recipe.description %></p>
  
  <div class="recipe-details-btns">
    <button>Generate shopping list</button>
    <%= link_to "Add Ingredient", new_recipe_recipe_food_path(recipe_id: @recipe.id) %>
  </div>

  <table>
  <thead>
    <tr>
    <th>Food</th>
    <th>Quantity</th>
    <th>Value</th>
    <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @recipe_foods.each do |recipe_food| %>
    <tr>
    <td><%= recipe_food.food.name %></td>
    <td><%= recipe_food.quantity %></td>
    <td><%= recipe_food.food.price %></td>
      <td>
      <button>Edit</button>
      <%= link_to "Delete", recipe_recipe_food_path(@recipe, recipe_food) %>
      </td>
    </tr>
    <% end %>
  </tbody>
  </table>
</div>
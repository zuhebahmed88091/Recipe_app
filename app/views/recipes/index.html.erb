<div class="container mt-3">
  <div class="mb-4">
    <%= link_to "Add New Recipe", new_recipe_path, class: "btn btn-primary" %>
  </div>
  <% @recipes.each do |recipe| %>
    <div class="card mb-4">
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="row">
              <div class="col-md-12">
                <h2 class="card-title"><%= link_to recipe.name, recipe, class: "text-decoration-none text-reset" %></h2>
              </div>
              <div class="col-md-12 mt-3">
                <% if current_user == recipe.user %>
                  <%= button_to "REMOVE", recipe_path(recipe.id), method: :delete, class: "btn btn-danger btn-sm" %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-md-6 mt-3">
            <p class="card-text"><strong>Description:</strong> <%= recipe.description %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
